@model TeacherEvaluation
<div class="container-fluid">
    <!-- DataTales Example -->
    <div class="card shadow mb-4 col-md-8">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Đánh giá thực tập</h6>
        </div>
        <div class="card-body">
            <div class="card shadow mb-4 mt-5">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin chi tiết:</h6>
                </div>
                <div class="card-body">
                    <b>1. Thông tin đề tài: @ViewBag.DataInfo.TopicInfo.Name</b>
                    <p>Yêu cầu: </p>
                    <p>@Html.Raw(ViewBag.DataInfo.TopicInfo.Content)</p>
                    <p>2. Thông tin sinh viên: @ViewBag.DataInfo.StudentInfo.Name - @ViewBag.DataInfo.StudentInfo.Identity</p>
                </div>
            </div>
            <form action="/evaluation/teacher-create" method="post">
                <input class="form-control" type="hidden" name="StudentId" value="@ViewBag.DataInfo.StudentInfo.Id">
                <input class="form-control" type="hidden" name="StudentName" value="@ViewBag.DataInfo.StudentInfo.Name">
                <input class="form-control" type="hidden" name="TopicId" value="@ViewBag.DataInfo.TopicInfo.Id">
                <input class="form-control" type="hidden" name="TopicName" value="@ViewBag.DataInfo.TopicInfo.Name">
                <input class="form-control" type="hidden" name="TeacherId" value="@ViewBag.DataInfo.TopicInfo.TeacherId">
                <div class="mb-3"><label for="AttitudePoint">Điểm thái độ (thang điểm 10)</label><input class="form-control" id="AttitudePoint" type="number" name="AttitudePoint"></div>
                <div class="mb-3">
                    <label for="content">Nhận xét thái độ</label>
                    @Html.TextAreaFor(model => model.AttitudeReview, new { @id = "ckeditor", @class = "form-control" })
                </div>
                <div class="mb-3"><label for="ProgressPoint">Điểm quá trình (thang điểm 10)</label><input class="form-control" id="ProgressPoint" type="number" name="ProgressPoint"></div>
                <div class="mb-3">
                    <label for="content">Nhận xét quá trình</label>
                    @Html.TextAreaFor(model => model.ProgressReview, new { @id = "ckeditor1", @class = "form-control" })
                </div>
                <div class="mb-3"><label for="QualityPoint">Điểm chất lượng (thang điểm 10)</label><input class="form-control" id="QualityPoint" type="number" name="QualityPoint"></div>
                <div class="mb-3">
                    <label for="content">Nhận xét chất lượng</label>
                    @Html.TextAreaFor(model => model.QualityReview, new { @id = "ckeditor2", @class = "form-control" })
                </div>
                <input class="btn btn-success" type="submit" value="Xác nhận">
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

@section Scripts{
    <script>
        CKEDITOR.replace("ckeditor");
        CKEDITOR.config.height = 200;
    </script>
    <script>
        CKEDITOR.replace("ckeditor1");
        CKEDITOR.config.height = 200;
    </script>
    <script>
        CKEDITOR.replace("ckeditor2");
        CKEDITOR.config.height = 200;
    </script>
}
